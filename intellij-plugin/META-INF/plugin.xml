<idea-plugin version="2">
  <id>osmo.tester.intellij.plugin.1</id>
  <name>OSMO Plugin</name>
  <version>1.0</version>
  <vendor email="osmo-mbt@googlegroups.com" url="http://code.google.com/p/osmo">OSMO Tester</vendor>

  <description><![CDATA[
      Allows one to create run configurations for OSMO Tester using the run/debug configuration dialog.<br>
      Someday will also hopefully provide some analysis support and visualizations for the model code.
      ]]></description>

  <change-notes><![CDATA[
      Times are changing, we are getting old..
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->


  <application-components>
    <!-- Add your application components here -->
    <component>
      <implementation-class>osmo.tester.ide.intellij.OSMOPluginRegistration</implementation-class>
    </component>
  </application-components>
  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
    <group id="OSMOTester.MenuGroup" text="OSMO Tester" description="OSMO Tester">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <!--separator/-->
      <action id="OSMOTester.GenerateMainAction" class="osmo.tester.ide.intellij.actions.GenerateMainAction" text="Generate Main"
              description="Generates a main class for running a given OSMO Tester configuration">
        <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt M"/>
      </action>
      <action id="OSMOTester.ModelViewAction" class="osmo.tester.ide.intellij.actions.ModelViewAction" text="Model Viewer"
              description="Provides a view of the registered OSMO Tester model">
        <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt F1"/>
      </action>
    </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!--configurationType implementation="osmo.tester.ide.intellij.OSMORunConfigType"/>
    <programRunner implementation="osmo.tester.ide.intellij.Runner"/-->
    <!-- Add your extensions here -->
    <!--projectConfigurable implementation="osmo.tester.ide.intellij.ConfigDialog"/-->
    <!--applicationConfigurable implementation="osmo.tester.ide.intellij.ConfigDialog"/-->
  </extensions>
</idea-plugin>